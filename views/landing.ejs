			<%if(record){%>
            <% var date1 = new Date(record.current_observation.pubDate * 1000);
				const offsetMs = date1.getTimezoneOffset() * 60 * 1000;
				const dateLocal = new Date(date1.getTime() - offsetMs);
				var date2 = dateLocal.toISOString().slice(0, 19).replace(/-/g, "/").replace("T", " ");
				var mmddyy = date1.toString().slice(4,15);
				var day = date1.toString().slice(0,4);
				var mmdd = date1.toString().slice(4,10);
            %>
			<div class="forecast-table">
				<div class="container">
					<div class="forecast-container">
						<div class="today forecast">
							<div class="forecast-header">
								<div class="day"><%=day%></div>
								<div class="date"><%= mmdd%></div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content">
								<div class="location"><%= record.location.city%></div>
								<div class="degree">
									<div class="num"><%=record.current_observation.condition.temperature%><sup>o</sup>F</div>
									<div class="forecast-icon">
										<img src="images/icons/icon-1.svg" alt="" width="240%">
									</div>	
								</div>
								<span>Humidity: <%= record.current_observation.atmosphere.humidity%></span>
								<span>Wind Speed: <%= record.current_observation.wind.speed%>km/h</span><br>
								<span>Weather: <%= record.current_observation.condition.text%></span><br>
								<span>Sunrise: <%= record.current_observation.astronomy.sunrise%></span>
								<span>Sunset: <%= record.current_observation.astronomy.sunset%></span>
							</div>
						</div>
                        <% for (var i=0; i < record.forecasts.length; i++) { %>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day"><%=record.forecasts[i].day%></div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content">
								<div class="forecast-icon">
									<% var picindex = record.forecasts[i].code;
									picindex = picindex%14 + 1;%>
									<img src="images/icons/icon-<%=picindex%>.svg" alt="images/icons/icon-13.svg" width="90%">
								</div>
								<div class="degree"><%= record.forecasts[i].high%><sup>o</sup></div>
								<small><%= record.forecasts[i].low%><sup>o</sup></small>
							</div>
						</div>
                        <%}%>
